<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/userAppointmentHistoryCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:padding="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/userAppointmentHistoryImageView"
                android:layout_width="179dp"
                android:layout_height="102dp"
                android:layout_marginStart="8dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/berber1" />

            <TextView
                android:id="@+id/userAppointmentHistoryBarberName"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Berberin Adı"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/userAppointmentHistoryImageView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userAppointmentHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Randevu Saati"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/userAppointmentHistoryImageView"
                app:layout_constraintTop_toBottomOf="@+id/userAppointmentHistoryBarberName" />

            <TextView
                android:id="@+id/userAppointmentHistoryService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Saç Kesimi"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/userAppointmentHistoryImageView"
                app:layout_constraintTop_toBottomOf="@+id/userAppointmentHistoryDate" />

            <TextView
                android:id="@+id/userAppointmentHistoryPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="45 TL"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/userAppointmentHistoryService"
                app:layout_constraintTop_toBottomOf="@+id/userAppointmentHistoryDate" />

            <TextView
                android:id="@+id/userAppointmentHistoryAddComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="228dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="15dp"
                android:text="Yorum Yap >"
                android:textColor="#03DAC5"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text=" Yer : "
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/userAppointmentHistoryImageView"
                app:layout_constraintTop_toBottomOf="@+id/userAppointmentHistoryService" />

            <TextView
                android:id="@+id/userAppointmentHistoryPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="İş Yeri"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/userAppointmentHistoryService" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>