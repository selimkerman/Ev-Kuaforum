<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/userCommentListCardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        app:cardElevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userCommentListBarberIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/user_icon"
                android:gravity="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userCommentListBarberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Berberin Adı"
                android:textColor="@color/colorTextBlack"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/userCommentListBarberIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userCommentListDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Randevu Saati"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/userCommentListBarberName"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListBarberName" />

            <TextView
                android:id="@+id/userCommentListService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Saç Kesimi"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/userCommentListBarberName"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListDate" />

            <TextView
                android:id="@+id/userCommentListPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="45 TL"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/userCommentListService"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListDate" />

            <ImageView
                android:id="@+id/userCommentListIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="36dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListBarberIcon"
                app:srcCompat="@drawable/icon_star_black" />

            <TextView
                android:id="@+id/userCommentListRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="36dp"
                android:text="5.0"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/userCommentListIcon"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListBarberIcon" />

            <TextView
                android:id="@+id/userCommentListComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:text="dderwsfdssadsasadsdaadsadsadsadsadsadsasdadadsadsadsadsaadsadsasdasasadsasdasdadsadssdadsadsaadsadsadssdadsasdasdasdadsadsd"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListIcon" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Yer : "
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/userCommentListBarberName"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListService" />

            <TextView
                android:id="@+id/userCommentListPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:text="İş Yeri"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/userCommentListService" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>